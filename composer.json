{
    "name": "brotkrueml/typo3-jobrouter-connector",
    "type": "typo3-cms-extension",
    "description": "Define connections from TYPO3 to JobRouter digitisation platform",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Chris MÃ¼ller",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "ext-sodium": "*",
        "brotkrueml/jobrouter-client": "^0.6",
        "typo3/cms-backend": "^9.5",
        "typo3/cms-core": "^9.5",
        "typo3/cms-extbase": "^9.5",
        "typo3/cms-fluid": "^9.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^8.3"
    },
    "autoload": {
        "psr-4": {
            "Brotkrueml\\JobRouterConnector\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brotkrueml\\JobRouterConnector\\Tests\\": "Tests"
        }
    },
    "config": {
        "sort-packages" : true,
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "jobrouter_connector",
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/web"
        }
    },
    "scripts": {
        "fix-cs": ".Build/bin/php-cs-fixer fix"
    }
}
